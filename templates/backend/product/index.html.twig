{% extends 'admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Listes des produits</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="dashboard">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Tables</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Datatables</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Basic</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="basic-datatables" class="display table table-striped table-hover">
                                <thead>
                                    <th>Image</th>
                                    <th>Nom</th>
                                    <th>Slug</th>
                                    <!-- <th>Description</th> -->
                                    <th>Prix</th>
                                    <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for product in products %}
                                    <tr>
                                        <td>
                                            <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.name | default('Product image') }}" class="img-thumbnail" style="max-width: 50px;">
                                        </td>
                                        <td>{{ product.name }}</td>
                                        <td>{{ product.slug }}</td>
                                        <!-- <td>{{ product.description }}</td> -->
                                        <td>{{ product.price }}</td>
                                        <td>
                                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-eye"></i></a>
                                            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-success btn-sm"><i class="fas fa-edit"></i></a>
                                            {{ include('backend/product/_delete_form.html.twig') }}
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="6">no records found</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}