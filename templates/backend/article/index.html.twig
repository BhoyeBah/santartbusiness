{% extends 'admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Listes des produits</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="{{ path('app_dashboard') }}">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Tables</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Datatables</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Basic</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="basic-datatables" class="display table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>CreatedAt</th>
                                        <th>UpdatedAt</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for article in articles %}
                                        <tr>
                                            <td>
                                                <img src="{{ asset('uploads/blog/' ~ article.image) }}" alt="{{ article.name | default('article image') }}" class="img-thumbnail" style="max-width: 50px;">
                                            </td>
                                            <td>{{ article.title }}</td>
                                            <td>{{ article.description }}</td>
                                            <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>
                                                <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-eye"></i></a>
                                                <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-success btn-sm"><i class="fas fa-edit"></i></a>
                                                {{ include('backend/article/_delete_form.html.twig') }}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="6">
                                                {% if article.commentaires|length > 0 %}
                                                    <ul>
                                                        {% for commentaire in article.commentaires %}
                                                            <li>{{ commentaire.content }}</li>
                                                        {% endfor %}
                                                    </ul>
                                                {% else %}
                                                    <p>Aucun commentaire</p>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="6">Aucun produit trouv√©</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
